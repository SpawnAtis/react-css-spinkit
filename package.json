{
  "name": "react-css-spinkit",
  "version": "1.0.0",
  "description": "CSS-only spinners for React",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "lint:es": "eslint .",
    "lint:es:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:staged": "jest --findRelatedTests",
    "storybook": "start-storybook -p 9001 -c storybook",
    "storybook:build": "build-storybook -c storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:es:fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/mocks/styles.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SpawnAtis/react-css-spinkit.git"
  },
  "keywords": [
    "react",
    "react-css-spinkit"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SpawnAtis/react-css-spinkit/issues"
  },
  "homepage": "https://github.com/SpawnAtis/react-css-spinkit#readme",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@storybook/react": "^5.0.5",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-kentcdodds": "^14.3.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.0.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.7.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^4.0.4"
  },
  "peerDependencies": {
    "react": ">=16.2"
  },
  "engines": {
    "node": ">=8"
  }
}
